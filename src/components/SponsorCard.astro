---
const { path, sponsorName, sponsorImg, website, sponsorDescription } = Astro.props;

interface Props {
	path: string;
	sponsorName: string;
	sponsorImg: string;
	sponsorDescription: string;
}


---


<div <div
class="group p-6 sm:p-8 rounded-3xl bg-white border border-gray-100 dark:shadow-none dark:border-gray-700 dark:bg-gray-800 bg-opacity-50 shadow-2xl shadow-gray-600/10"
>
	<a href={path}>
		<img
			src={sponsorImg}
			alt={sponsorName}
			class="h-10 md:h-20 w-auto mx-auto"
		/>
		<h3 class="text-center text-xl sm:text-2xl font-bold mt-4">{sponsorName}</h3>
		<p class="text-center text-gray-600 dark:text-gray-400 mt-2">{sponsorDescription}</p>
	</a>
</div>